<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/book_container.xml -->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="6dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/roundedContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:elevation="10dp"
                app:cardCornerRadius="150sp">

                <ImageView
                    android:id="@+id/book_icon_container"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="6dp"
                    android:scaleType="centerCrop"
                    android:paddingLeft="14dp"
                    android:paddingRight="14dp"
                    android:src="@drawable/book_placeholder" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/book_title_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="4dp"
                android:layout_marginTop="12dp"
                android:layout_toEndOf="@+id/roundedContent"
                android:orientation="vertical"
                android:text="Titulo del libro amplio, pero que muy amplio"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />
        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_select_book_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#00FFFFFF" />

    <ImageButton
        android:id="@+id/btn_favorite_book_container"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#00FF0000"
        android:src="@mipmap/icono_star_fill_white_50"
        android:tint="@color/blue" />

    <ImageButton
        android:id="@+id/btn_delete_book_container"
        android:src="@mipmap/delete_fill"
        android:backgroundTint="@color/white"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_gravity="end|bottom"/>

    <!-- Agrega más vistas según necesites -->
</androidx.cardview.widget.CardView>

<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/book_container.xml -->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="6dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/roundedContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="12dp"
                android:elevation="10dp"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/book_icon_container"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/book_placeholder" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/book_title_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/roundedContent"
                android:text="Titulo del libro"
                android:textSize="20sp" />
        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_select_book_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#00FFFFFF" />

    <ImageButton
        android:id="@+id/btn_delete_book_container"
        android:src="@mipmap/delete_fill"
        android:tint="@color/backgroundColor"
        android:backgroundTint="@color/white"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginEnd="24dp"
        android:layout_gravity="end|center"/>

    <!-- Agrega más vistas según necesites -->
</androidx.cardview.widget.CardView>

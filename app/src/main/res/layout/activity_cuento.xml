<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layoutStory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">dd
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="70sp"
                android:layout_height="70sp"
                android:layout_weight="1"
                android:gravity="start">

                <ImageButton
                    android:id="@+id/btnReproducir"
                    android:layout_width="70sp"
                    android:layout_height="70sp"
                    android:scaleType="fitCenter"
                    android:backgroundTint="@android:color/transparent"
                    android:src="@mipmap/play"
                    app:tint="@color/backgroundColor"
                    app:showAsAction="always"/>

                <ProgressBar
                    android:id="@+id/progressBarReproducir"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="70sp"
                    android:layout_height="70sp"
                    android:indeterminateTint="@color/backgroundColor"
                    android:indeterminateTintMode="src_in" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/btnGuardar"
                android:layout_width="70sp"
                android:layout_height="70sp"
                android:scaleType="fitCenter"
                android:backgroundTint="@android:color/transparent"
                android:src="@mipmap/save"
                app:tint="@color/backgroundColor"
                app:showAsAction="always"/>



        </LinearLayout>
        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="15dp"
                    android:elevation="10dp"
                    app:cardCornerRadius="20sp">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="270dp"
                        android:layout_height="270dp"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:src="@drawable/icono_princesas"/>

                </androidx.cardview.widget.CardView>



                <TextView
                    android:id="@+id/txtCuentoGenerado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginBottom="20dp"
                    android:scrollbars="vertical"
                    android:gravity="top"
                    android:text="Cuento Generado"
                    android:textSize="18sp"
                    android:minLines="5"
                    android:backgroundTint="@color/white"/>

            </LinearLayout>

        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layoutLoading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Mensaje de carga -->
        <TextView
            android:id="@+id/textGenerando"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generando cuento..."
            android:textSize="25sp"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Barra de progreso -->
        <ProgressBar
            android:id="@+id/progressBarGenerando"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:indeterminate="true"
            android:indeterminateTint="@color/backgroundColor"
            android:max="100"
            android:visibility="visible" />

    </LinearLayout>

</LinearLayout>

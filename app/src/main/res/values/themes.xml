<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CuentameUnCuento" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">#4AD295</item> <!-- Color de la barra de herramientas -->
        <item name="colorPrimaryDark">#3A9B78</item> <!-- Color oscuro para la sombra -->
        <item name="colorAccent">#FF4081</item> <!-- Color de acento para botones, etc. -->
        <!-- fuentes a usar: bubblegum sans, schoolbell, chewy  -->
        <item name="fontFamily">@font/bubblegum</item>
    </style>

    <style name="Theme.CuentameUnCuento.AnimatedSplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/backgroundColor</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/avd_splash</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.CuentameUnCuento</item>
    </style>

    <!-- Aplicar el estilo por defecto a los textos -->
    <style name="Theme.CuentameUnCuento" parent="Base.Theme.CuentameUnCuento"/>
</resources>